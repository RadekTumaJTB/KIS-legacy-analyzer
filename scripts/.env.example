# Database Deployment Configuration
# Copy this file to .env and fill in your values

# Oracle Database Connection
DB_HOST=localhost
DB_PORT=1521
DB_SERVICE=FREEPDB1

# DB_JT Schema
DB_JT_USER=db_jt
DB_JT_PASSWORD=your_password_here

# DB_DSA Schema
DB_DSA_USER=db_dsa
DB_DSA_PASSWORD=your_password_here

# Deployment Settings
SCHEMA=BOTH                    # BOTH, DB_JT, or DB_DSA
SOURCE_DIR=./sources/DB        # Path to SQL scripts
SKIP_DROP=false                # true to skip dropping existing objects
DRY_RUN=false                  # true for dry-run mode
MAX_RETRIES=3                  # Number of retry attempts for failed objects

# Logging
LOG_LEVEL=INFO                 # DEBUG, INFO, WARNING, ERROR
LOG_FILE=deployment.log        # Log file path (empty for auto-generated name)

# Optional: Alternative connection strings
# If set, these override the individual connection parameters above
# DB_JT_CONNECTION_STRING="db_jt/password@localhost:1521/FREEPDB1"
# DB_DSA_CONNECTION_STRING="db_dsa/password@localhost:1521/FREEPDB1"
